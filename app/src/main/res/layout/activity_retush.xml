<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32393E">
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:contentDescription="@string/image"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/menuLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#292E32"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/radiusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/radius_3"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/radiusSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiusValue"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:max="47"
            android:progress="0"
            android:progressTint="#007AFF"
            android:thumbTint="#007AFF" />

        <TextView
            android:id="@+id/strengthValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiusSlider"
            android:layout_centerHorizontal="true"
            android:text="@string/strength_0_10"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/strengthSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/strengthValue"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:max="90"
            android:progress="0"
            android:progressTint="#007AFF"
            android:thumbTint="#007AFF" />

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/strengthSlider"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/save_button"
            android:src="@drawable/save_button" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/strengthSlider"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/go_back"
            android:src="@drawable/back_button" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>